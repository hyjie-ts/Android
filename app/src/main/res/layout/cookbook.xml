<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/breakfast_bt"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:background="@drawable/breakfast"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"></Button>

    <Button
        android:id="@+id/lunch_bt"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:background="@drawable/lunch"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"></Button>

    <Button
        android:id="@+id/dinner_bt"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:background="@drawable/dinner"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"></Button>

</LinearLayout>
